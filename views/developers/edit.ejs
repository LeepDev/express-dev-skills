<nav><a href="/">HOME</a> | <a href="/developers">ALL DEVS</a></nav>

<br>
<h1>Edit Dev</h1>
<br>
<form action="/developers/<%= dev.id %>?_method=PUT" method="POST" class="form">
  <div class="form-group">
    <label>
      Name: 
      <input type="text" class="form-control" name="name" value="<%= dev.name %>"><br>
    </label>
  </div>
  <div class="form-group">
    <label>
      Id: 
      <input type="number" class="form-control" name="id" value="<%= dev.id %>"><br>
    </label>
  </div>
  <span>Skills:</span>
  <div class="form-group">
    <sub>(You can enter multiple skills seperated by comma and no spaces)</sub><br>
    <label>
      <textarea class="form-control" name="skills"><%= dev.skills %></textarea>
    </label>
  </div>
  <br><br>
  <button type="submit" class="btn btn-primary">Update Dev</button>
</form>

